include includes/head

body.category-page
  include includes/header
  main(role="main")
    section

      article.projects(style="background-color: #{category.background}")
  
        header.category
          a.category-name
            h2.category-name=category.name
          span.category-image-container
            a.category-image
              img(src=category.img)
          p.description=category.description
  
        ul.projects-container
          each project in projects
            each id in project.categoryId
              if id == category.id
                include includes/project

    include includes/categories-list

  include includes/footer
  include includes/overlay
  include includes/scripts
