defaultUserBackground = "https://cdn.gomix.com/01a72eba-647e-4abf-abe6-89b02e388a7f%2Fdefault-user-background.svg"
anonAvatar = "https://cdn.gomix.com/01a72eba-647e-4abf-abe6-89b02e388a7f%2Fanon-avatar.svg"

.profile
  a.category-name
    color: primary
    display: inline-block

  .recent-projects
    background-image: url(defaultUserBackground)
    background-size: cover
    border-radius: 5px
    padding: 12px
    background-position: center
    overflow: auto
  
  .profile-info
    width: 22%
    float: left
    margin-top: 3rem
    margin-right: 3%

  .avatar
    max-width: 128px
    max-height: 128px
    margin-right: 3%
    width: 100%
    height: 100%
    margin-bottom: .5em

  .anon-avatar
    background-image: url(anonAvatar)
    background-position: center
    background-repeat: no-repeat
    background-size: 65%

